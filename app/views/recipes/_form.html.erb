<%= fields_for @recipe do |f| %>
  <%= f.label :recipe_name %>
  <%= f.text_field :recipe_name %>
  <%= f.label :ingredients %>
  <%= f.collection_check_boxes(:ingredient, :ingredient_ids, Ingredient.all, :id, :ingredient_name) %>
  collection_check_boxes(:post, :author_ids, Author.all, :id, :name_with_initial)
  <%= f.submit %>
  
<% end %>
